---
import BaseLayout from "../../layouts/BaseLayout.astro";
import BlogPagination from "../../components/reactComponents/BlogPagination";
import GetInTouchForm from "../../components/reactComponents/GetInTouchForm";
import BlogGreetingImg from "../../../public/staticImages/blogGreetingImg.webp"
const { page = 1 } = Astro.params;
const currentPage = typeof page === 'string' ? parseInt(page) : 1;
---
<BaseLayout title="Blog">
    <main>
        <div class="BlogGreeting aspect-[1.5] md:aspect-auto relative w-full h-[400px] group overflow-hidden ">


            <!-- Hover image -->
            <img
                    src={BlogGreetingImg.src}
                    alt="Blog Greeting Hover"
                    class="w-full h-full object-cover absolute inset-0 "
            />

            <!-- Text on hover -->
            <div
                    class="absolute inset-0 flex justify-center items-center text-center text-white bg-[rgba(0,0,0,0.5)]
            px-6 md:px-20">
                <p class="font-semibold lg:text-[40px] md:text-[30px] sm:text-[25px] text-[14px]">
                    Stay informed with the latest industry insights, best practices, and consulting tips. Our blog
                    covers topics ranging from internal audit trends to digital transformation strategies. Explore the
                    resources below to stay ahead of the curve.
                </p>
            </div>
        </div>

        <br>
        <br>

        <BlogPagination
                initialPage={currentPage}
                articlesPerPage={4}
                client:only="react"
        />

        <GetInTouchForm client:only="react"/>
    </main>


</BaseLayout>