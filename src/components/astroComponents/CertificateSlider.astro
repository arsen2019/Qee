---
import CertificateCarousel from '../reactComponents/CertificateCarousel'
// import '../styles/global.css';
import React from "react";


const imageModules = import.meta.glob("/public/temp/certificates/*");
const imagePaths = Object.keys(imageModules).map((path) =>
    path.replace(/^\/public/, "")

);
console.log(imagePaths)
const imageSRC = imagePaths.concat(imagePaths).concat(imagePaths);
---

<div class="flex flex-col items-center md:mb-28 mb-14 " data-aos="fade-up"
     data-aos-anchor-placement="top-center">
    <div class="border-t-2 border-gray-400 w-full md:mb-24 mb-10 ">
        <h1 class=" xl:text-4xl lg:text-3xl text-2xl font-semibold py-5 ">QUALIFICATION OF THE STAFF</h1>
    </div>
    <CertificateCarousel images={imageSRC} client:only="react" />
</div>

