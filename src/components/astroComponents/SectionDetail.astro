---
import GetStartedPopUp from "../reactComponents/popUps/GetStartedPopUp";
interface Props {
    title: string;
}
const {title,} = Astro.props;
---
<div class="relative mt-6 mx-auto ">
    <img
            src="../../servicesImage/FrameServices.svg"
            alt=" Service static image"
            class="w-min-full h-min-full  object-cover "
    />
    <div class="absolute md:top-1/3 md:left-12 left-2 top-2 inset-1 ">
        <h1 class=" xl:text-5xl lg:text-4xl md:text-3xl text-xl font-semibold text-white">
            {title}
        </h1>
    </div>
</div>
<section class="mx-auto max-w-7xl">
        <div class="text-base lg:text-lg md:pt-10 pt-2">
            <slot/>
            <div class="flex max-w-4xl  my-20  mx-auto">
                <GetStartedPopUp style={{
                    background:'#033271',
                    padding: '10px',
                    width: '100%',
                    fontWeight: 'bold',
                    fontSize: '20px',
                    color: 'white',
                }} buttonText="Get Started" client:only="react"/>


            </div>
        </div>

</section>