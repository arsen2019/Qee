---
interface Props {
    title: string;
}
const {title,} = Astro.props;
---
<div class="relative my-6 mx-auto ">
    <img
            src="../../servicesImage/FrameServices.svg"
            alt=" Service static image"
            class="w-min-full h-min-full  object-cover "
    />
    <div class="absolute md:top-1/3 md:left-12 left-2 top-2 inset-1 ">
        <h1 class=" xl:text-5xl lg:text-4xl md:text-3xl text-xl font-semibold text-white">
            {title}
        </h1>
    </div>
</div>
<section class="my-6 mx-auto max-w-7xl">
        <div class="text-base lg:text-lg pt-10">
            <slot/>
        </div>

</section>