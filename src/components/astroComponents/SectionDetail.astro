---
interface Props {
    title: string;
    imageSrc: string;
    alt: string;
}
const { title, imageSrc, alt, } = Astro.props;
---
<section class="my-10 mx-auto max-w-7xl px-4">
    <h1 class="text-center xl:text-4xl lg:text-3xl text-2xl font-semibold py-2">
        {title}
    </h1>
    <div class="flex flex-col-reverse md:flex-row justify-center items-center gap-20 pt-20">
        <div class="basis-full md:basis-1/2 text-base lg:text-lg">
            <slot />
        </div>
        <div class="basis-full md:basis-1/3 relative w-full h-64 lg:h-auto">
            <div class="absolute inset-6 bg-[#033271] transform -translate-x-10 translate-y-10 "></div>
            <div class="absolute inset-6 bg-[#033271] transform translate-x-6 -translate-y-10 "></div>
            <img
                    src={imageSrc}
                    alt={alt}
                    class="relative shadow-lg w-min-full h-min-full object-cover md:w-[400px] md:h-[400px] w-[300px] h-[300px]"
            />
        </div>
    </div>
</section>