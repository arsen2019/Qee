---
interface Props {
    imageSrc: string;
    alt: string;
    title: string;
    subTitle: string;
}

const { title, imageSrc, alt,subTitle } = Astro.props;
---
<div class="flex flex-col rounded-xl shadow-2xl overflow-hidden">
    <div class="">
        <img src={imageSrc} alt={alt} class="flex-shrink-0 min-w-full min-h-full h-[200px] object-cover h-stretch sm:w-[240px] sm:h-[300px]">
    </div>
    <div class="flex flex-col justify-center items-center  w-full p-4 pb-8">
        <h3 class="font-semibold text-lg">{title}</h3>
        <p class="text-gray-700 lg:text-lg  text-base p-4">{subTitle}</p>
        <button class="rounded-md bg-[#033271] text-white p-2 px-6">Read More</button>
    </div>
</div>