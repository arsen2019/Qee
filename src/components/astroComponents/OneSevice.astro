---
const { id, title, imageUrl,subTitle } = Astro.props;
---
<div class="flex flex-col rounded-xl shadow-2xl overflow-hidden">
    <div class="">
        <img src={imageUrl} alt={title} class="flex-shrink-0 min-w-full min-h-full h-[200px] object-cover h-stretch sm:w-[240px] sm:h-[300px]">
    </div>
    <div class="flex flex-col justify-center items-center  w-full p-4 pb-8">
        <h3 class="font-semibold text-lg">{title}</h3>
        <p class="text-gray-700 lg:text-lg  text-base p-4">{subTitle}</p>
        <button class="rounded-md bg-[#033271] text-white p-2 px-6"><a href={`/services/${id}`} >
            Read More
        </a></button>
    </div>
</div>
