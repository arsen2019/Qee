---
interface Props {
    title: string;
    imageSrc: string;
    alt: string;
}

const { title, imageSrc, alt } = Astro.props;
---
<section class="my-10 mx-auto max-w-7xl px-4">
    <h1 class="text-center xl:text-4xl lg:text-3xl text-2xl font-semibold py-5">
        {title}
    </h1>
    <div class="flex flex-col lg:flex-row justify-center items-center gap-20 pt-20">
        <!-- Text content slot -->
        <div class="basis-full lg:basis-1/2 text-base lg:text-lg">
            <slot />
        </div>
        <!-- Image wrapper -->
        <div class="basis-full lg:basis-1/3 relative w-full h-64 lg:h-auto">
            <!-- Background peek layers -->
            <div class="absolute inset-6 bg-[#033271] transform -translate-x-10 translate-y-10 rounded-lg"></div>
            <div class="absolute inset-6 bg-[#033271] transform translate-x-10 -translate-y-10 rounded-lg"></div>
            <!-- Main image -->
            <img
                    src={imageSrc}
                    alt={alt}
                    class="relative shadow-lg w-full h-full object-cover rounded-lg"
            />
        </div>
    </div>
</section>